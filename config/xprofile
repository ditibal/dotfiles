export HOSTNAME=$(hostname)
source ~/.xprofile.local 2> /dev/null

if [ "$HOSTNAME" = "comp" ]; then
    xrandr --output HDMI-0 --mode 1920x1080 --pos 3440x0 --rotate left --rate 75  --output DP-0 --primary --mode 3440x1440 --pos 0x505 --rotate normal --rate 144 --output DP-1 --off --output DP-2 --off --output DP-3 --off --output DP-4 --off --output DP-5 --off
fi
